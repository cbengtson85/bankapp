{
    "globals": {
        "require": true
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "no-console": "off",
        "vars-on-top": "error",
        "comma-dangle": "error",
        "no-var": "error",
        "quotes": ["error", "single"],
        "indent": ["error", 4, {"SwitchCase" : 1}],
        "react/jsx-no-bind": "error"
    }
}
